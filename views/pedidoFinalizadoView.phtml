<?php
session_start();
require_once("./models/PedidoRepository.php");
require_once("../models/LineaPedidoRepository.php");

// Verificar que el usuario esté autenticado
if (!isset($_SESSION['user'])) {
    echo "Inicie sesión para ver su pedido finalizado.";
    exit;
}

$userId = $_SESSION['user']->getId();

// Obtener el último pedido finalizado
$pedido = PedidoRepository::getLastFinalizedPedido($userId);

if (!$pedido) {
    echo "<p>No se ha encontrado ningún pedido finalizado recientemente.</p>";
    exit;
}

// Obtener las líneas del pedido finalizado
$lineasPedido = LineaPedidoRepository::getLineasByPedido($pedido->getId());
$totalPedido = $pedido->getPrecioTotal();
?>

